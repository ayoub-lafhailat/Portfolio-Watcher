@page
@model ErrorModel
@{
    ViewData["Title"] = "Error";
    var userMessage = TempData["Error"] as string;
}

<div class="card shadow-sm border-0 rounded-4">
    <div class="card-body p-4 p-md-5">
        <h1 class="h4 fw-semibold text-danger mb-2">Er ging iets mis</h1>

        @if (!string.IsNullOrWhiteSpace(userMessage))
        {
            <div class="alert alert-danger mb-3" role="alert">
                @userMessage
            </div>
        }
        else
        {
            <div class="alert alert-danger mb-3" role="alert">
                Er is een onverwachte fout opgetreden. Probeer het later opnieuw.
            </div>
        }

        <div class="d-flex gap-2">
            <a asp-page="/Index" class="btn btn-primary rounded-3">Naar home</a>
            <a asp-page="/PortfolioView" class="btn btn-outline-secondary rounded-3">Naar portfolio’s</a>
        </div>
    </div>
</div>
