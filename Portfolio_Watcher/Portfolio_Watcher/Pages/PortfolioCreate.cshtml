@page
@model Portfolio_Watcher.Pages.PortfolioCreateModel
@{
    ViewData["Title"] = "Portfolio toevoegen";
}

<div class="row justify-content-center">
    <div class="col-12 col-md-10 col-lg-8 col-xl-6">

        <div class="card shadow-sm border-0 rounded-4">
            <div class="card-body p-4 p-md-5">

                <div class="d-flex align-items-center justify-content-between mb-4">
                    <h1 class="h4 fw-semibold mb-0">Portfolio toevoegen</h1>
                </div>

                <form method="post">
                    <div asp-validation-summary="All" class="alert alert-danger py-2" role="alert"></div>

                    <!-- Name -->
                    <div class="mb-3">
                        <label asp-for="PortfolioModel.Name" class="form-label fw-medium">Name</label>
                        <input asp-for="PortfolioModel.Name"
                               class="form-control form-control-lg"
                               placeholder="Bijv. Lange termijn" />
                        <span asp-validation-for="PortfolioModel.Name" class="text-danger"></span>
                    </div>

                    <!-- Description -->
                    <div class="mb-4">
                        <label asp-for="PortfolioModel.Description" class="form-label fw-medium">Description</label>
                        <textarea asp-for="PortfolioModel.Description"
                                  class="form-control form-control-lg"
                                  rows="4"
                                  placeholder="Korte omschrijving van je portfolio..."></textarea>
                        <span asp-validation-for="PortfolioModel.Description" class="text-danger"></span>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary btn-lg flex-fill rounded-3">
                            Toevoegen
                        </button>

                        <a asp-page="/Portfolio/Index" class="btn btn-outline-secondary btn-lg rounded-3">
                            Annuleren
                        </a>
                    </div>
                </form>

            </div>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
