@page
@model Portfolio_Watcher.Pages.PortfolioViewModel
@{
    ViewData["Title"] = "Portfolio’s";
    var success = TempData["Success"] as string;
    var error = TempData["Error"] as string;
}

<div class="card shadow-sm border-0 rounded-4">
    <div class="card-body p-4 p-md-5">

        @if (!string.IsNullOrWhiteSpace(success))
        {
            <div class="alert alert-success" role="alert">@success</div>
        }
        @if (!string.IsNullOrWhiteSpace(error))
        {
            <div class="alert alert-danger" role="alert">@error</div>
        }

        <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3 mb-4">
            <h1 class="h4 fw-semibold mb-0">Portfolio’s</h1>

            <a asp-page="/PortfolioCreate" class="btn btn-primary btn-lg rounded-3">
                + Portfolio toevoegen
            </a>
        </div>

        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Naam</th>
                        <th>Beschrijving</th>
                        <th class="text-end">Actie</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Portfolios != null && Model.Portfolios.Any())
                    {
                        foreach (var portfolio in Model.Portfolios)
                        {
                            <tr>
                                <td class="fw-semibold">@portfolio.Name</td>
                                <td class="text-muted">@portfolio.Description</td>
                                <td class="text-end">
                                    <a class="btn btn-outline-secondary btn-sm"
                                       asp-page="/TradeView"
                                       asp-route-portfolioId="@portfolio.PortfolioId">
                                        Bekijk trades
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3" class="text-center text-muted py-4">
                                Nog geen portfolio’s aangemaakt.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>
