@page
@model Portfolio_Watcher.Pages.TradeViewModel
@{
    ViewData["Title"] = "Trades";
}

<div class="card shadow-sm border-0 rounded-4">
    <div class="card-body p-4 p-md-5">

        <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3 mb-4">
            <h1 class="h4 fw-semibold mb-0">Trades</h1>

            <!-- Zelfde functionaliteit, alleen Bootstrap styling -->
            <form method="post" class="d-flex flex-wrap gap-2">
                <button type="submit"
                        class="btn btn-outline-secondary"
                        asp-page-handler="Sorted"
                        asp-route-sorter="Symbol">
                    Sort Symbol
                </button>

                <button type="submit"
                        class="btn btn-outline-secondary"
                        asp-page-handler="Sorted"
                        asp-route-sorter="PositionSize">
                    Sort Position Size
                </button>

                <button type="submit"
                        class="btn btn-outline-secondary"
                        asp-page-handler="Sorted"
                        asp-route-sorter="Date">
                    Sort Date
                </button>
            </form>
        </div>

        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Symbol</th>
                        <th>Position Size</th>
                        <th>Change%</th>
                        <th>Profit Loss</th>
                        <th>Shares</th>
                        <th>BuyPrice</th>
                        <th>SellPrice</th>
                        <th>Time</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Trades != null && Model.Trades.Any())
                    {
                        foreach (var trade in Model.Trades)
                        {
                            <tr>
                                <td class="fw-semibold">@trade.Symbol</td>
                                <td>@trade.PositionSize</td>
                                <td>@trade.ChangePercentage</td>
                                <td>@trade.ProfitLoss</td>
                                <td>@trade.Shares</td>
                                <td>@trade.BuyPrice</td>
                                <td>@trade.SellPrice</td>
                                <td>-</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center text-muted py-4">
                                Geen trades gevonden.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>
