@page
@model Portfolio_Watcher.Pages.TradeViewModel
@{
    ViewData["Title"] = "Trades";
}

<div class="page-wrapper">

    <!-- Top navigatie -->
    <header class="top-nav">
        <nav>
            <ul class="menu">
                <li><a href="#">Portfolio</a></li>
                <li><a href="#" class="active">Trades</a></li>
                <li><a href="#">Converter</a></li>
                <li><a href="#">Nieuws</a></li>
                <li><a href="#">Watchlist</a></li>
            </ul>
        </nav>
    </header>

    <!-- Hoofdcontent -->
    <main class="content">

        <h1>Trades</h1>

        <!-- Actieknoppen boven de tabel -->
        <div class="toolbar">
            <button type="button">Search</button>
            <button type="button">Filter</button>
            <button type="button">Sort</button>
            <button type="button">Add Trade</button>
            <button type="button">+</button>
        </div>

        <!-- Overzicht van trades -->
        <section class="trades-table-wrapper">
            <table class="trades-table">
                <thead>
                    <tr>
                        <th>Symbol</th>
                        <th>Position</th>
                        <th>Size</th>
                        <th>Change%</th>
                        <th>Change</th>
                        <th>Shares</th>
                        <th>Price</th>
                        <th>Balance</th>
                        <th>P&amp;L</th>
                        <th>DD</th>
                        <th>Long/Short</th>
                        <th>Time</th>
                        <th>Order Type</th>
                        <th>PP</th>
                        <th>SP</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Trades != null && Model.Trades.Any())
                    {
                        foreach (var trade in Model.Trades)
                        {
                            <tr>
                                <!-- Data die je echt hebt -->
                                <td>@trade.Symbol</td>
                                <td>@trade.PositionSize</td> <!-- hier gebruik je de service-uitkomst -->
                                <td>-</td>              @* Size (nog geen veld) *@
                                <td>-</td>              @* Change% (nog geen veld) *@
                                <td>-</td>              @* Change (nog geen veld) *@
                                <td>@trade.Shares</td>
                                <td>@trade.Price</td> @* eenvoudige Equity-berekening *@
                                <td>-</td>              @* Balance (nog geen veld) *@
                                <td>-</td>              @* P&L (nog geen veld) *@
                                <td>-</td>              @* DD (nog geen veld) *@
                                <td>-</td>              @* Long/Short (nog geen veld) *@
                                <td>-</td>              @* Time (nog geen veld) *@
                                <td>-</td>              @* Order Type (nog geen veld) *@
                                <td>-</td>              @* PP (nog geen veld) *@
                                <td>-</td>              @* SP (nog geen veld) *@
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="15" style="text-align:center;">
                                Geen trades gevonden.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </section>

    </main>

</div>
